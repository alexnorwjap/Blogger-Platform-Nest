{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{ "include": "**/env/*", "watchAssets": true }],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".input-dto.ts", ".view-dto.ts"],
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ]
  }
}
